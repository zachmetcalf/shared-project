{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "./clean.command",
            "windows": {
                "command": ".\\clean.bat"
            },
            "options": {
                "cwd": "${workspaceFolder}/scripts/setup"
            },
            "problemMatcher": []
        },
        {
            "label": "open",
            "type": "shell",
            "command": "open ${workspaceFolderBasename}.xcworkspace",
            "windows": {
                "command": ".\\${workspaceFolderBasename}.sln"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "premake",
            "type": "shell",
            "command": "./premake.command",
            "windows": {
                "command": ".\\premake.bat"
            },
            "options": {
                "cwd": "${workspaceFolder}/scripts/setup"
            },
            "problemMatcher": []
        },
        {
            "label": "setup",
            "type": "shell",
            "command": "./setup.command",
            "windows": {
                "command": ".\\setup.bat"
            },
            "options": {
                "cwd": "${workspaceFolder}/scripts/setup"
            },
            "problemMatcher": []
        }
    ]
}