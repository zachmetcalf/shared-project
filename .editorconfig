root = true

# defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4
tab_width = 4

# json
[*.json]
insert_final_newline = false
trim_trailing_whitespace = false

# windows
[*.bat]
end_of_line = crlf
